<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_horizontal_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin_half">

            <TextView
                android:id="@+id/semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Semester 1"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/total_subject"
                android:layout_below="@id/semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Total Subject : 6"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/total_credit"
                android:layout_below="@id/semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Credit : 13"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/scgpa"
                android:layout_below="@+id/total_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester CGPA : 3.30"
                android:padding="5dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/lgrade"
                android:layout_below="@+id/total_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Later Grade : B+"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/semester_result"
                android:layout_below="@+id/scgpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result : Passed"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:textColor="@color/colorBlack"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>
